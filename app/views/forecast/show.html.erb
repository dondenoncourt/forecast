<div class="min-vh-100 d-flex align-items-center justify-content-center text-white" style="background: linear-gradient(135deg,rgb(178, 189, 238) 0%,rgb(135, 97, 173) 100%);">
  <div class="text-center p-4" style="max-width: 600px;">
    <h1 class="display-3 fw-bold mb-3" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);">Weather Forecast</h1>
    <p class="fs-5 mb-4 opacity-75">Get accurate weather forecasts for any US location</p>
    
    <div class="mb-4">
      <%= form_with url: forecast_path, method: :get, local: true, class: "d-flex gap-2 justify-content-center" do |f| %>
        <%= f.text_field :q, 
            placeholder: "street, city, state abbreviation, and ZIP code", 
            class: "form-control",
            style: "max-width: 400px;" %>
        <%= f.submit "Get Forecast", class: "btn btn-light" %>
      <% end %>
      <p class="fs-6 mb-4 opacity-75">
        Separate by comma, e.g.: 123 Main St Apt 4B, Anytown, CA 90210
      </p>
    </div>
    
    <% if @forecast[:error] %>
      <div class="alert alert-warning bg-white bg-opacity-20 border-0 mt-4" role="alert">
        <p class="mb-0"><%= @forecast[:error] %></p>

      </div>
    <% else %>
      <div class="mt-4">
        <div class="card bg-white bg-opacity-10 border-0" style="backdrop-filter: blur(10px);">
          <div class="card-body p-4">
            <h2 class="card-title h4 mb-3">Current Conditions</h2>
            <div class="text-center mb-3">
              <p class="mb-0 fw-bold fs-4"><%= @query %></p>
              <% if @forecast[:cached] %>
                <span class="badge bg-info bg-opacity-50 text-white mt-2" style="font-size: 1.5rem;">Pulled from cache</span>
              <% else %>
                <span class="badge bg-success bg-opacity-50 text-white mt-2" style="font-size: 1.5rem;">Accessed from API</span>
              <% end %>
            </div>
            <% if @forecast[:current] %>
              <div class="display-1 fw-bold my-3">
                <%= @forecast[:current][:temperature] %>Â°F
              </div>
              <div class="d-flex justify-content-around mt-4">
                <p class="mb-0 opacity-75">Humidity: <%= @forecast[:current][:humidity] %>%</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
